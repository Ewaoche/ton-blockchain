{
    "compilerOptions": {
      "target": "ES2020",                           // Target JavaScript version
      "module": "commonjs",                      // Module system to use
      "strict": true,                            // Enable all strict type checking options
      "esModuleInterop": true,                   // Allow default imports from CommonJS modules
      "skipLibCheck": true,                      // Skip type checking of declaration files                      // Root directory of source files
      "resolveJsonModule": true,                 // Enable importing .json files
      "forceConsistentCasingInFileNames": true   // Enforce consistent casing in import paths
    },
   "ts-node": {
    "transpileOnly": true,
    "transpiler":"ts-node/transpilers/swc"
   }
  }
  